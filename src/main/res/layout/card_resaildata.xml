<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/resail_card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2"
        android:background="@drawable/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_resail"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#c1c1c1"
            android:text="Tanmay Jha"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneno_resail"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#c1c1c1"
            android:text="9790048621"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomno_resail"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="#c1c1c1"
            android:text="K-628"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_resail"
            android:layout_row="0"
            android:layout_column="1"
            android:textColor="#c1c1c1"
            android:text="Matress"
            android:layout_marginLeft="150dp"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost_resail"
            android:layout_marginLeft="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#c1c1c1"
            android:text="Rs400"
            android:textSize="15sp" />
    </GridLayout>
</android.support.v7.widget.CardView>